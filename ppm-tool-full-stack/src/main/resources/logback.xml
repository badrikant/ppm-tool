<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="120 seconds">

    <property name="MAX_HISTORY" value="15"/>
    <property name="LOG_DIR" value="/opt/inmobi/ppm-tool/logs"/>

    <appender name="INFO_LOG"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${LOG_DIR}/info.%d{yyyy-MM-dd}.log.gz
            </fileNamePattern>
            <totalSizeCap>10GB</totalSizeCap>
            <maxHistory>${MAX_HISTORY}</maxHistory>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <appender name="REQUEST_LOG"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${LOG_DIR}/requests.%d{yyyy-MM-dd}.log.gz
            </fileNamePattern>
            <totalSizeCap>5GB</totalSizeCap>
            <maxHistory>${MAX_HISTORY}</maxHistory>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <appender name="ERROR_LOG"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${LOG_DIR}/error.%d{yyyy-MM-dd}.log.gz
            </fileNamePattern>
            <totalSizeCap>5GB</totalSizeCap>
            <maxHistory>${MAX_HISTORY}</maxHistory>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
            <immediateFlush>true</immediateFlush>
        </encoder>
    </appender>

    <logger name="io.tool.full.stack" level="DEBUG" additivity="false">
        <appender-ref ref="INFO_LOG"/>
        <appender-ref ref="ERROR_LOG"/>
    </logger>

    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter">
        <level value="DEBUG" additivity="false"/>
        <appender-ref ref="REQUEST_LOG"/>
    </logger>

    <logger name="io.tool.full.stack.ppmtoolfullstack." level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="INFO_LOG"/>
    </root>

    <logger name="org.zalando.logbook.Logbook" level="TRACE" additivity="false">
        <appender-ref ref="REQUEST_LOG"/>
    </logger>

    <!-- SQL generated by Hibernate -->
    <logger name="org.hibernate.SQL" level="DEBUG" />

</configuration>